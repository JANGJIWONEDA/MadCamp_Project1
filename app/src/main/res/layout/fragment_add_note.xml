<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Memo.fragments.AddNoteFragment"
        android:padding="12dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font1"
            android:text="메모 추가하기"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/addNoteHeading"
            android:layout_marginTop="16dp"
            android:background="@drawable/contact_button"
            android:fontFamily="@font/font1"
            android:hint="제목을 적어주세요"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/addNoteTitle"
            android:layout_marginTop="12dp"
            android:background="@drawable/contact_button"
            android:fontFamily="@font/font1"
            android:gravity="top"
            android:hint="내용을 적어주세요"
            android:padding="12dp"
            android:textSize="20sp" />

        <android.widget.Button
            android:id="@+id/saveNoteButton"
            android:layout_height="40dp"
            android:layout_width="300dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="18dp"
            android:onClick="onClickEditDiaryButton"
            android:text="메모 저장"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/contact_button"
            android:fontFamily="@font/font1"
            android:textSize="15dp">
        </android.widget.Button>

    </RelativeLayout>
</layout>